{
  "manifest_version": 2,
  "name": "moz-commerce",
  "version": "0.1.0",
  "description": "",
  "applications": {
    "gecko": {
      "id": "commerce@mozilla.org"
    }
  },
  "icons": {
    "16": "icon.svg",
    "24": "icon.svg",
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_icon": "icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["product_info.bundle.js"]
    }
  ],
  "sidebar_action": {
    "default_icon": "icon.svg",
    "default_title": "Commerce",
    "default_panel": "sidebar.html"
  },
  "permissions": ["<all_urls>"]
}
